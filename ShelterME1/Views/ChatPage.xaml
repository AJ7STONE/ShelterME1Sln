<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShelterME1.Views.ChatPage"
             Title="ChatBot"
             BackgroundColor="PeachPuff">
    <StackLayout Padding="10">
        <ScrollView x:Name="ChatScrollView" VerticalOptions="FillAndExpand">
            <StackLayout x:Name="MessagesStack" />
        </ScrollView>
        <StackLayout Orientation="Horizontal" VerticalOptions="End">
            <Entry x:Name="UserMessageEntry" Placeholder="Type your message here" HorizontalOptions="FillAndExpand" />
            <Button Text="Send" Clicked="OnSendButtonClicked" BackgroundColor="Red" TextColor="White" />
        </StackLayout>
    </StackLayout>
</ContentPage>
