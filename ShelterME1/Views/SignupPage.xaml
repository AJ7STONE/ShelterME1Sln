<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShelterME1.Views.SignupPage"
             BackgroundColor="PeachPuff"
             Title="Sign in/Login">

    <StackLayout Padding="30">
        <Image Source="s1.png" HeightRequest="185" Aspect="AspectFit" />

        <Entry x:Name="UsernameEntry" Placeholder="Username"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>

        <Button Text="Login" Clicked="OnLoginButtonClicked" BackgroundColor="Red" 
                TextColor="White" />

        
        <Button Text="Sign up" BackgroundColor="Red" 
                TextColor="White" Clicked="OnSignUpButtonClicked"/>

        <Label x:Name="MessageLabel" TextColor="Red" HorizontalOptions="Center" Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>
